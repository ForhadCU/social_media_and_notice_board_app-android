<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".strategyDesignPattern.GroupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_groupName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Group Name"
        android:textColor="#000000"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/cv_notices"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/l1_1"
                    >
                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imgBtn_allNotice"
                        android:src="@drawable/ic_notice"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:background="#ffff"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notices"
                        android:textSize="16sp"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="#191919"
                        android:layout_below="@+id/imgBtn_allNotice"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/cv_createNotices"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imgBtn_createNotice"
                        android:src="@drawable/ic_create_notice"
                        android:background="#ffff"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Create Notice"
                        android:textSize="16sp"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="#191919"
                        android:layout_below="@+id/imgBtn_createNotice"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/cv_Members"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imgBtn_members"
                        android:src="@drawable/ic_members"
                        android:background="#ffff"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Members"
                        android:textSize="16sp"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="#191919"
                        android:layout_below="@+id/imgBtn_members"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/cv_inviteMembers"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imgBtn_inviteMembers"
                        android:src="@drawable/ic_invite_members"
                        android:background="#ffff"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invite Members"
                        android:textSize="16sp"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="#191919"
                        android:layout_below="@+id/imgBtn_inviteMembers"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/cv_editGroups"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imgBtn_editGroup"
                        android:src="@drawable/ic_edit_group"
                        android:background="#ffff"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit group"
                        android:textSize="16sp"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="#191919"
                        android:layout_below="@+id/imgBtn_editGroup"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/cv_help"

                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:id="@+id/imgBtn_helpGroup"
                        android:src="@drawable/ic_help"
                        android:background="#ffff"
                        android:scaleType="fitXY"
                        android:padding="5dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Help"
                        android:textSize="16sp"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="#191919"
                        android:layout_below="@+id/imgBtn_helpGroup"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"                        />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>