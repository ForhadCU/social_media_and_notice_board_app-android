<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:Card_View="http://schemas.android.com/apk/res-auto"
    Card_View:cardElevation="5dp"
    Card_View:cardCornerRadius="2dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:id="@+id/l1"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/l2"
                android:layout_alignParentTop="true"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group: "
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Group Name"
                    android:id="@+id/tv_rv_noticeList_groupName"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/titleID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Post_title_txt_sty"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/l2"
                android:text="Title" />

            <TextView
                android:id="@+id/descID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titleID"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="5dp"
                android:textAppearance="@style/Widget.AppCompat.TextView"
                />
            <ImageView
                android:layout_below="@id/descID"
                android:layout_width="320dp"
                android:layout_height="420dp"
                android:id="@+id/imgViewID"
                android:src="@mipmap/ic_launcher"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.8dp"
            android:layout_below="@+id/l1"
            android:layout_marginTop="10dp"
            android:background="@color/light_gray"
            android:id="@+id/view1"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/view1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            >
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:id="@+id/imgBtnLike"
                android:src="@drawable/ic_thumb"
                android:scaleType="center"
                android:background="#ffff"
                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:id="@+id/imgBtnComment"
                android:src="@drawable/ic_comment"
                android:scaleType="center"
                android:background="#ffff"

                />
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_weight="1"
                android:id="@+id/imgBtnDownload"
                android:src="@drawable/ic_download"
                android:scaleType="center"
                android:background="#ffff"

                />



        </LinearLayout>
    </RelativeLayout>



</androidx.cardview.widget.CardView>